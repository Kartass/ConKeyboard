<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:weightSum="5.7"
        android:background="@color/background_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/background_conField"
            android:orientation="horizontal"
            android:weightSum="10"
            android:id="@+id/layout_con">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/recycler_cons"
                android:orientation="horizontal"
                android:layout_weight="8.85"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_con"
                android:scaleType="fitCenter"
                android:id="@+id/btn_con"
                android:layout_weight="1"/>

        </LinearLayout>

        <include
            android:layout_height="0dp"
            android:layout_width="match_parent"
            layout="@layout/layout_keys_portrait"
            android:id="@+id/layout_keyboard_portrait"
            android:layout_weight="5"/>

    </LinearLayout>

</LinearLayout>